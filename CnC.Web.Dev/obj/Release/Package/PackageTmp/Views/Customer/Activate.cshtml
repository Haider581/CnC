@using CnC.Core
@using System.Web.UI.WebControls
@using CnC.Service
@using CnC.Core.Customers;
@*@using reCAPTCHA.MVC*@
@{
    var customer = Session["CurrentCustomer"] as Customer;
   
    LocalizationService localizationService = null;
    if (customer != null)
    {
        localizationService = new LocalizationService(customer.LanguageId);
    }
}
<style>
    .invalid {
        color: red !important;
    }
</style>

<script src="~/Scripts/jquery-1.12.4.js"></script>


<div id="content">

    <section id="widget-grid" class="">
        <!-- start Search Form -->
        <div class="jarviswidget jarviswidget-sortable" id="wid-id-8" data-widget-editbutton="false" data-widget-custombutton="false" role="widget">
            <header role="heading">
                <span class="widget-icon"></span>
                @*<h2>Customer Verification</h2>*@
                <h2>@(customer == null ? "Customer Activation": localizationService.GetResource("Cnc.CustomerActivation", null, "Customer Activation")) </h2 >
                @*<span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span>*@
            </header>
            <!-- widget div-->
            <div role="content">
                <!-- widget edit box -->
                <div class="jarviswidget-editbox">
                    <!-- This area used as dropdown edit box -->
                </div>
                <!-- end widget edit box -->
                <!-- widget content -->
                <div id="divEmp" class="widget-body no-padding" style="text-align:center;">

                    <h1 style="height:50px; text-align:center;  padding-top:10px; font-weight:400">@Html.Raw(ViewBag.MessagePass)</h1>
                    <h2 style="height:50px; text-align:center;  padding-top:10px; font-weight:400">   @Html.ActionLink(customer==null? "Click Here To Login" : localizationService.GetResource("Cnc.ClickHere", null, "Click Here To Login"), "Login", "Account")</h2>
                </div>

            </div>
        </div>
    </section>
</div>
@section Scripts {

}
@section pagespecific {


}
<script>
    $(document).ready(function () {
        $("#logout").remove();
        $("#left-panel").remove();
        $('body').addClass("minified");

    });//Ready document

</script>
