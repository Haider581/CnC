    <script>
        $("#CountryDDL").change(function () {
            var id = $("#CountryDDL").val();
            if (id != "") {
                CheckIsValid();
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("GetCities", "Common")',
                    contentType: "application/json; charset=utf-8",
                    data: { countryId: id },
