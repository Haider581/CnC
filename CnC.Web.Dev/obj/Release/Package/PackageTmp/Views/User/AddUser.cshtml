<script>

    function GeneratePassword() {
        $.ajax({
            type: "GET",
            url: '@Url.Action("GeneratePassword", "User")',
            contentType: 'application/json; charset=utf-8',
            dataType: "json",
            data: {
            },
            success: function (data) {
                if (data != null) {
                    $('#NewPassword').val(data);
                    $('#ConfirmPassword').val(data);
                }
            },
            error: function (e) {
            }

        });
    }
</script>
