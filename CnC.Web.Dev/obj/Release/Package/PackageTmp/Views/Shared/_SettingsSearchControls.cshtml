@using CnC.Service;
@using CnC.Core.Customers;
@model CnC.Core.CnCSetting
@{
    var customer = Session["CurrentCustomer"] as Customer;
    LocalizationService localizationService = null;
    if (customer == null)
    {
        localizationService = new LocalizationService();
    }
    else
    {
        localizationService = new LocalizationService(customer.LanguageId);
    }
}
<style>
    .control-padding-bottom {
        padding-bottom: 20px;
    }
</style>
<div class="row">
    <div class="col-sm-4 control-padding-bottom">
        <div class="form-group">
            <div class="col-md-12">
                <label class="control-label"><strong>Name</strong></label>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter name of setting to search", @type = "text" } })
            </div>
        </div>
    </div>
    <div class="col-sm-4 control-padding-bottom">
        <div class="form-group">
            <div class="col-md-12">
                <label class="control-label"><strong>Value</strong></label>
                @Html.EditorFor(model => model.Value, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Value of setting to search", @type = "text" } })
            </div>
        </div>
    </div>
</div>
