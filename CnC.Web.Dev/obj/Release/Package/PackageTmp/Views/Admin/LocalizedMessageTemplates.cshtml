@model IEnumerable<CnC.Core.Messages.LocalizedMessageTemplate>

@{
    ViewBag.Title = "LocalizedMessageTemplates";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    table {
        display: block;
        overflow-x: auto;
    }

    .wraptext {
        word-wrap: break-word;
        max-width: 200px;
        white-space: normal;
    }
</style>
<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<!-- breadcrumb -->
<ol class="breadcrumb">
    <li>Admin</li>
    <li><strong>@ViewBag.Title</strong></li>
</ol>
<!-- end breadcrumb -->
<!-- MAIN CONTENT -->
<div id="content">
    <!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget" id="wid-id-0" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-colorbutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Localized Message Templates</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">

                            <div class="table-responsive" style="overflow-x: hidden">
                                @using (Html.BeginForm("LocalizedMessageTemplates", "Admin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @*@Html.ValidationSummary("", new { @class = "text-danger" })*@
                                    <fieldset>
                                        @{ Html.RenderPartial("_localizedMessageSearchControls", new CnC.Core.Messages.LocalizedMessageTemplate());}
                                        <div class="row" style="padding-bottom:20px;">
                                            <div class="col-sm-12">
                                                @{Html.RenderPartial("_SearchButtons");}
                                            </div>
                                        </div>
                                        <div class="row" style="padding-bottom:20px;">
                                            <div class="col-sm-12">
                                                <a href="@Url.Action("AddLocalizedMessageTemplates", "Admin")" name="btnCreateNew" id="btnCreateNew" value="" class="btn btn-labeled btn-primary pull-right" style="margin-right:10px; margin-left:10px;">
                                                    <span style="padding:10px;">Add New Localized Message Template</span>
                                                    <span class="btn-label" style="left: 0px;"><i class="glyphicon glyphicon-plus"></i></span>
                                                </a>
                                            </div>
                                        </div>
                                    </fieldset>
                                                    if (Model != null && Model.Count() > 0)
                                                    {
                                                        <table class="table table-bordered">
                                                            <tr>
                                                                <th class="col-xs-2">
                                                                    @Html.DisplayName("Template Name")
                                                                </th>
                                                                <th class="col-xs-2">
                                                                    @Html.DisplayName("Language")
                                                                </th>
                                                                <th class="col-xs-2">
                                                                    @Html.DisplayName("Bcc")
                                                                </th>
                                                                <th class="col-xs-2">
                                                                    @Html.DisplayNameFor(model => model.Subject)
                                                                </th>
                                                                <th class="col-xs-4">
                                                                    @Html.DisplayNameFor(model => model.Body)
                                                                </th>
                                                                @*<th class="col-xs-2">
                                                                        @Html.DisplayNameFor(model => model.IsActive)
                                                                    </th>*@
                                                                <th></th>
                                                            </tr>

                                                            @foreach (var item in Model)
                                                            {
                                                                <tr>

                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.MessageTemplate.Name)
                                                                    </td>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.Language.Name)
                                                                    </td>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.BccEmailAddresses)
                                                                    </td>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.Subject)
                                                                    </td>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.Body)
                                                                    </td>

                                                                    @*<td>
                                                                            @Html.DisplayFor(modelItem => item.IsActive)
                                                                        </td>*@
                                                                    <td>
                                                                        @Html.ActionLink("Edit", "EditLocalizedMessageTemplates", new { id = item.Id }) @*|
                                                                            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                                                                            @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
                                                                    </td>
                                                                </tr>
                                                            }
                                                        </table>


                                                        Html.RenderPartial("_Pagination");
                                                    }
                                                    else
                                                    {
                                                        <div class="alert alert-info fade in" style="margin-top:5px;">
                                                            <button class="close" data-dismiss="alert">×</button>
                                                            <i class="fa-fw fa fa-cube"></i>
                                                            <strong>Sorry! </strong> No Records Found
                                                        </div>

                                                        }
                                                    }
                            </div>
                            
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
    </section>
    <!-- end widget grid -->
</div>