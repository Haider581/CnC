@model IEnumerable<CnC.Core.Accounts.Role>

@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    table {
        display: block;
        overflow-x: auto;
    }

    .wraptext {
        word-wrap: break-word;
        max-width: 200px;
        white-space: normal;
    }
</style>
<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<!-- breadcrumb -->
<ol class="breadcrumb">
    <li>Admin</li>
    <li><strong>@ViewBag.Title</strong></li>
</ol>
<!-- end breadcrumb -->
<!-- MAIN CONTENT -->
<div id="content">
    <!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget" id="wid-id-0" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-colorbutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Roles</h2>
                    </header>
                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">


                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            @if (Model != null && Model.Count() > 0)
                            {

                                <div class="table-responsive" style="overflow-x: hidden">

                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                        @*@Html.ValidationSummary("", new { @class = "text-danger" })*@
                                        <fieldset>
                                            @{ Html.RenderPartial("_RoleSearchControls", new CnC.Core.Accounts.Role());}
                                            <div class="row" style="padding-bottom:20px;">
                                                <div class="col-sm-12">
                                                    @{Html.RenderPartial("_SearchButtons");}

                                                </div>
                                            </div>
                                            <div class="row" style="padding-bottom:20px;">
                                                <div class="col-sm-12">
                                                    <a href="@Url.Action("AddNewRole", "Admin")" name="btnCreateNew" id="btnCreateNew" value="" class="btn btn-labeled btn-primary pull-right" style="margin-right:10px; margin-left:10px;">
                                                        <span style="padding:10px;">Add New Role</span>
                                                        <span class="btn-label" style="left: 0px;"><i class="glyphicon glyphicon-plus"></i></span>
                                                    </a>
                                                </div>
                                            </div>

                                        </fieldset>
                                        <table class="table table-bordered">
                                            <tr>
                                                <th class="col-xs-3">
                                                    @Html.DisplayNameFor(model => model.Name)
                                                </th>
                                                <th class="col-xs-5">
                                                    @Html.DisplayNameFor(model => model.Description)
                                                </th>
                                                <th class="col-xs-2">
                                                    @Html.DisplayNameFor(model => model.CanViewOnlineRecords)
                                                </th>
                                                <th class="col-xs-2">
                                                    @Html.DisplayNameFor(model => model.CreatedOn)
                                                </th>
                                                <th></th>
                                            </tr>

                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Description)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CanViewOnlineRecords)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CreatedOn)
                                                    </td>
                                                    <td>
                                                        @Html.ActionLink("Edit", "EditRole", new { id = item.Id }) @*|
                                                            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                                                            @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
                                                    </td>
                                                </tr>
                                            }

                                        </table>

                                                            Html.RenderPartial("_Pagination");
                                                        }
                                </div>
                                                        }
                                                        else
                                                        {
                                                            <div class="alert alert-info fade in" style="margin-top:5px;">
                                                                <button class="close" data-dismiss="alert">×</button>
                                                                <i class="fa-fw fa fa-cube"></i>
                                                                <strong>Sorry! </strong> No Records Found
                                                            </div>
                                                        }
                        </div>
                        <!-- end widget content -->

                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->

            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
    </section>
    <!-- end widget grid -->
</div>