                                                                <td>@item.CardRequest.CardType.Name</td>
                                                                <td>@item.CardRequest.CardIssuerRespondedOn.Value.ToString("yyyy/MM/dd HH:mm")</td>
                                                                @*<td><a onclick='OpenDialog(@item.Number);' style="cursor:pointer">View</a></td>*@
