
@{
    ViewBag.Title = "Error";
}
@{
    bool isSession = false;
    var userSession = Session["CurrentSession"] as CnC.Core.Accounts.User;
    if (userSession != null)
    { isSession = true; }
}
<script src="~/Scripts/jquery-1.12.4.js"></script>
<div id="content">

    <!-- row -->
    <div class="row">

        
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

            <div class="row">
                <div class="col-sm-12">
                    <div class="text-center error-box">
                        <h1 class="error-text-2 bounceInDown animated"> Error <span class="particle particle--c"></span><span class="particle particle--a"></span><span class="particle particle--b"></span></h1>
                        <br>
                        <p class="lead">
                            <strong>Oooops!!!</strong> Something went wrong! We have been notified.
                        </p>

                        <div id="divLink">
                            <a href="/Account/Login" style="font-size:26px; font-weight:bold;">Login</a>
                        </div>
                        <br>
                        <input type="hidden" id="hfIsSession" value="@isSession" />



                    </div>

                </div>

            </div>

        </div>
        <!-- end row -->

    </div>

</div>
<script>
    $(document).ready(function () {
        var isCust = $("#hfIsSession").val();
               if (isCust == null || isCust == "") {
            $("#logout").remove();
            $("#left-panel").remove();
            $('body').addClass("minified");
               } else {
                   $("#divLink").hide();
               }

        });
</script>