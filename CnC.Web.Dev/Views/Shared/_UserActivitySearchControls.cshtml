@using CnC.Service;
@using CnC.Core.Customers
@model CnC.Core.Audit.UserActivity
@{
    var customer = Session["CurrentCustomer"] as Customer;
    LocalizationService localizationService = null;
    if (customer == null)
    {
        localizationService = new LocalizationService();
    }
    else
    {
        localizationService = new LocalizationService(customer.LanguageId);
    }
}
<style>
    .control-padding-bottom {
        padding-bottom: 20px;
    }
</style>

<div class="row control-padding-bottom">
    <div class="col-sm-3 control-padding-bottom">
        <div class="form-group">
            <div class="col-md-12">
                <label class="control-label"><strong>@localizationService.GetResource("Cnc.CreatedDateFrom", null, "Date From")</strong></label>
                @Html.EditorFor(model => model.CreatedDateFrom, new { htmlAttributes = new { @class = "form-control", @placeholder = "Date From" } })
            </div>
        </div>
    </div>
    <div class="col-sm-3 control-padding-bottom">
        <div class="form-group">
            <div class="col-md-12">
                <label class="control-label"><strong>@localizationService.GetResource("Cnc.DateTo", null, "To")</strong></label>
                @Html.EditorFor(model => model.CreatedDateTo, new { htmlAttributes = new { @class = "form-control", @placeholder = "Date To" } })
            </div>
        </div>
    </div>
</div>