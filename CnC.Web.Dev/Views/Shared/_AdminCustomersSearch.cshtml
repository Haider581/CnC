@using CnC.Service;
@using CnC.Core.Customers;
@model CnC.Core.Customers.Customer
@{
    var customer = Session["CurrentCustomer"] as Customer;
    LocalizationService localizationService = null;
    if (customer == null)
    {
        localizationService = new LocalizationService();
    }
    else
    {
        localizationService = new LocalizationService(customer.LanguageId);
    }
}
<style>
    .control-padding-bottom {
        padding-bottom: 20px;
    }
</style>

<div class="row control-padding-bottom">
    <div class="col-sm-3 control-padding-bottom">
        <div class="form-group">
            <div class="col-md-12">
                <label class="control-label"><strong>@localizationService.GetResource("Cnc.FirstName", null, "First Name")</strong></label>
                @Html.EditorFor(model => model.User.FirstName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Please enter First name" } })
            </div>
        </div>
    </div>
    <div class="col-sm-3 control-padding-bottom">
        <div class="form-group">
            <div class="col-md-12">
                <label class="control-label"><strong>@localizationService.GetResource("Cnc.LastName", null, "Last Name")</strong></label>
                @Html.EditorFor(model => model.User.LastName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Please enter Last name" } })
            </div>
        </div>
    </div>
    <div class="col-sm-3 control-padding-bottom">
        <div class="form-group">
            <div class="col-md-12">
                <label class="control-label"><strong>@localizationService.GetResource("Cnc.Nic", null, "NIC")</strong></label>
                @Html.EditorFor(model => model.NIC, new { htmlAttributes = new { @class = "form-control", @placeholder = "Please enter NIC" } })
            </div>
        </div>
    </div>
    <div class="col-sm-3 control-padding-bottom">
        <div class="form-group">
            <div class="col-md-12">
                <label class="control-label"><strong>@localizationService.GetResource("Cnc.Passport#", null, "Passport No")</strong></label>
                @Html.EditorFor(model => model.PassportNo, new { htmlAttributes = new { @class = "form-control", @placeholder = "Please enter Passport No" } })
            </div>
        </div>
    </div>
    <div class="col-sm-3 control-padding-bottom">
        <div class="form-group">
            <div class="col-md-12">
                <label class="control-label"><strong>@localizationService.GetResource("Cnc.Email", null, "Email")</strong></label>
                @Html.EditorFor(model => model.User.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Please enter Email" } })
            </div>
        </div>
    </div>
    <div class="col-sm-3 control-padding-bottom">
        <div class="form-group">
            <div class="col-md-12">
                <label class="control-label"><strong>@localizationService.GetResource("Cnc.ContactNo", null, "Contact#")</strong></label>
                @Html.EditorFor(model => model.ContactNo, new { htmlAttributes = new { @class = "form-control", @placeholder = "Please enter Contact#" } })
            </div>
        </div>
    </div>
</div>