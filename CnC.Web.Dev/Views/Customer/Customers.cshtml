                                                                            <td>@item.User.LastName</td>
                                                                            <td>@item.User.Email</td>
                                                                            <td>@item.NIC</td>
                                                                            <td>@item.PassportNo</td>
                                                                            <td>@item.Gender</td>
                                                                            <td>@item.User.CreatedOn.ToString("yyyy/MM/dd HH:mm")</td>
                                                                            <td>@item.StatusString</td>
