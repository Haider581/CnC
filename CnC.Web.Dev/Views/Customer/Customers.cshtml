                <fieldset>
                    <div class="row">
                        <section class="col col-6">
                            <label class="label">New Password</label>
                            <label class="input" style="width:200px">
                                <label></label>
                                @Html.TextBox("txtPassword", null, new { @class = "form-control", placeholder = "New password" })
