    function calculateTotalInEU() {
        try {
            var sum = 0;
            $(".feeEU").each(function () {
                var value = $(this).text();
                // add only if the value is number
                if (!isNaN(value) && value.length != 0) {
                    sum += parseFloat(value);
                    $("#hidTotalFeeEU").val(sum);
                    $("#TotalFeeEU").text(sum.toFixed(2));
                }
            });
        }
        catch (e) { }
    }



