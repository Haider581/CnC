@{
    string popUpId = this.ViewData.ContainsKey("popUpId") ? this.ViewData["popUpId"].ToString() : string.Empty;
    string userId = this.ViewData.ContainsKey("userId") ? this.ViewData["userId"].ToString() : string.Empty;
    string userName = this.ViewData.ContainsKey("userName") ? this.ViewData["userName"].ToString() : string.Empty;


}
<div class="modal fade" id="@(popUpId)" data-backdrop-limit="1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="myModalLabel">Pay Online</h4>
            </div>
            <div class="modal-body">
                <div class="widget-body no-padding">
                    @using (Html.BeginForm("ResetPassword", "User", FormMethod.Post, new { @class = "smart-form", role = "form", name = "resetpassword" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="col-md-6">
                            <header>Reset Password for "@userName"</header>
                            <fieldset>
                                <section>
                                    <label class="label">Username</label>
                                    <label class="select">
                                        <i class="icon-append fa fa-comment"></i>
                                        @Html.Hidden(userId.ToString())
                                        <input type="text" name="UserName" value="@userName" />
                                    </label>
                                </section>

                                <section>
                                    <label class="label">Password</label>
                                    <label class="input">
                                        <i class="icon-append fa fa-comment"></i>
                                        @Html.TextBox("Password")
                                    </label>
                                </section>
                            </fieldset>
                            <footer>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </footer>
                        </div>
                    }
                </div>

               
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Close
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
